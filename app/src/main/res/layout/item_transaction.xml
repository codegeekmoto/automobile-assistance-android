        <TextView
            android:id="@+id/mechanic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Mechanic Name: Juan Cruz"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Transaction Code: KJASH"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/timeline_dot" />

            <TextView
                android:id="@+id/step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_book"
                android:text="Request Assistance"
                android:textColor="@color/success"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/timeline_dot" />

            <TextView
                android:id="@+id/step_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_book"
                android:text="Assistance Accepted"
                android:textColor="@color/success"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/timeline_dot" />

            <TextView
                android:id="@+id/job_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_book"
                android:text="Job Done"
                android:textColor="@color/dark"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/lightGray" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Complete"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.cardview.widget.CardView>